<header id="header" class="header">
  <div class="header_wrap">

    <!-- ▼ ロゴ ▼ -->
    <div class="logo">
  
      <div class="nav">
        <label id="nav_button" class="nav_button" for="nav_input">
          <span></span>
          <span></span>
          <span></span>
        </label>
      </div>
  
      <a class="logo_link" href="#home"><h1 class="logo_text">YouSync</h1></a>

    </div>

    <!-- ▼ 検索 ▼ -->
    <div class="search">
      <form id="search_form" class="search_form" autocomplete="off" @submit="search" onsubmit="return false;">
        <input id="search_input" class="search_input" type="search" size="50" placeholder="URLを入力">
        <button class="search_label" type="submit">
          <svg viewBox="0 0 24 24"><use xlink:href="/img/graphics.svg#search"></use></svg>
        </button>
      </form>
    </div>

    <!-- ▼ ユーザ ▼ -->
    <div id="user" class="user">
      <label class="user_label">
        <svg viewBox="0 0 24 24"><use xlink:href="/img/graphics.svg#user"></use></svg>
      </label>
    </div>

    <!-- ▼ 統計情報 ▼ -->
    <div id="statistics" class="statistics">
      <div class="statistics_inner"></div>
    </div>

  </div>
</header>
