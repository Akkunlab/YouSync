            <label class="search_label" for="search_toggle">
              <svg viewBox="0 0 24 24"><use xlink:href="/img/graphics.svg#search"></use></svg>
            </label>
          </form>
        </div>

        <!-- ▼ ユーザ ▼ -->
        <div class="user">
          <label class="user_label">
            <svg viewBox="0 0 24 24"><use xlink:href="/img/graphics.svg#user"></use></svg>
          </label>
        </div>

      </div>
    </header>
    
    <!-- ▼ Contents ▼ -->
    <div class="contents">

      <!-- ▼ Menu ▼ -->
      <div id="menu" class="menu">
        <div class="menu_wrap">
          <input id="nav_input" class="nav_input" type="checkbox">
          <label id="nav_blocker" class="nav_blocker" for="nav_input"></label>
          <div class="nav_content">
            <ul class="nav_list">
              <li class="nav_list_item"><a class="nav_list_item_link" href="#CONTENT">CONTENT</a></li>
