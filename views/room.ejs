<body>

  <div class="wrap">

    <!-- ▼ Header ▼ -->
    <header id="header" class="header">
      <div class="header_wrap">

        <!-- ▼ ロゴ ▼ -->
        <div class="logo">

          <div class="nav">
            <label id="nav_button" class="nav_button" for="nav_input">
